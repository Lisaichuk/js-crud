<main>
	<section>
		<h1 class="heading">Редагування товару</h1>
		<div class="form">
			<strong class="form__title">Інформація про товар</strong>

			<form method="POST" action="/product-edit">
				{{#with data}}
				<div class="form__content">
					<div class="form__trible">
						<div class="form__field">
							<label for="name" class="form__label">Назва товару</label>
							<input type="name" name="name" class="form__input">
						</div>

						<div class="form__field">
							<label for="price" class="form__label">Ціна</label>
							<input type="price" name="price" class="form__input">
						</div>

						<div class="form__field">
							<label for="id" class="form__label">ID</label>
							<input type="id" name="id" class="form__input">
						</div>
					</div>

					<div class="form__field">
						<label for="description" class="form__label">Короткий опис товару</label>
						<input type="description" name="description" class="form__input">
						<p class="form__sign">Відображається у картці товару</p>
					</div>

					<div class="form__buttons">
						<button class="form__button form__button-update">Зберегти оновлення</button>
						<button class="form__button form__button-delete">Видалити товар</button>
					</div>
				</div>
				{{/with}}
			</form>
		</div>
	</section>
</main>