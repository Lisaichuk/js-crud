<main class="main">

	{{#with data.purchase}}

	<form method="POST" action="/purchase-edit?id={{id}}" class="form-card">

		{{> purchase-heading title="Зміна данних"}}

		<div class="purchase-edit">

			<div class="form-card__info">
				<span class="form-card__title">ID:</span>
				<span>{{this.id}}</span>
			</div>

			<div class="form-card__info">
				{{> field label="Прізвище:" name="lastname"}}
				{{> field label="Ім'я:" name="firstname"}}
				{{> field label="Електронна пошта:" name="email"}}
				{{> field label="Телефон:" name="phone"}}
			</div>

			{{> button text="Зберегти зміни"}}

		</div>

	</form>

	{{/with}}

</main>